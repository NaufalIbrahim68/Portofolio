---
interface HeroProps {
  name: string;
  specialty: string;
  summary: string;
  cvButton?: { text: string; link: string };
  tagline?: string;
}

const { name, specialty, summary, cvButton, tagline } = Astro.props as HeroProps;
---

<section id="hero" class="flex flex-col items-start gap-4">
  <h1 class="text-4xl sm:text-5xl font-extrabold text-slate-50">
    {name}
  </h1>
  
  {tagline && (
    <h2 class="text-xl sm:text-2xl text-slate-300">
      {tagline}
    </h2>
  )}

  <h3 class="text-lg sm:text-xl text-slate-400">
    {specialty}
  </h3>
  
  <p class="mt-2 max-w-2xl text-base sm:text-lg text-slate-400">
    {summary}
  </p>
  
  {cvButton && (
    <a 
      href={cvButton.link} 
      download 
      class="mt-4 inline-block rounded-lg bg-slate-800 px-6 py-3
             font-semibold text-white transition-colors duration-300
             hover:bg-slate-700 focus:outline-none focus:ring-2 
             focus:ring-slate-500 focus:ring-offset-2"
    >
      {cvButton.text}
    </a>
  )}
</section>
