---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { ProjectProps } from "@types";

interface Props {
  projects: ProjectProps[];
}

const { projects } = Astro.props;

// Animations langsung di sini
const ANIMATIONS = {
  projects: [
    { container: "transition-transform duration-300", image: "transform hover:scale-105" },
    { container: "transition-transform duration-300", image: "transform hover:scale-110" },
    { container: "transition-transform duration-300", image: "transform hover:scale-95" },
  ],
};
---


<Section text="Featured Projects" href="projects">
  {
    projects.map(({ title, name, summary, image, linkPreview, linkSource, alt }, index) => {
      // Get animation classes for current project (cycle through if more projects than animations)
      const animation = ANIMATIONS.projects[index % ANIMATIONS.projects.length];
      
      return (
       <article class={`group overflow-hidden rounded-lg ${animation?.container ?? ""}`}>
          <a href={linkPreview} target="_blank" rel="noopener noreferrer" class="block">
            <div class="overflow-hidden rounded-lg">
         <Image 
  src={image} 
  alt={alt}
  width={800}
  height={450}
  class={`w-full h-auto ${animation?.image ?? ""}`}
/>

            </div>
            <div class="p-4">
              <h3 class="text-xl font-semibold mb-2 group-hover:text-blue-600 transition-colors duration-300">
                {title || name}
              </h3>
              <p class="text-gray-600 group-hover:text-gray-800 transition-colors duration-300">
                {summary}
              </p>
            </div>
            
            {/* Optional: Add source code link if available */}
            {linkSource && (
              <div class="p-4 pt-0">
                <a 
                  href={linkSource} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center text-sm text-blue-600 hover:text-blue-800 transition-colors duration-300"
                >
                  <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  View Source Code
                </a>
              </div>
            )}
          </a>
        </article>
      );
    })
  }
</Section>

<style>
  /* Optional: Additional CSS for smoother animations */
  article {
    transform-origin: center;
  }
  
  /* Custom hover effects for better performance */
  @media (hover: hover) {
    article:hover {
      transform: translateY(-4px);
    }
  }
  
  /* Ensure images don't overflow */
  .overflow-hidden {
    overflow: hidden;
  }
</style>