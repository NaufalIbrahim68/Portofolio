---
import { SITE_CONFIG, ANIMATIONS } from "@config";
import Icon from "./Icon.astro"; // You'll need an Icon component to render SVGs

const { socialLinks } = SITE_CONFIG;
---

<div class="flex flex-wrap items-center gap-4">
  {
    socialLinks.map((link) => (
      <a
        href={link.href}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={`Visit my ${link.icon} profile`}
        class:list={[
          // Base styles for the icon link
          "text-neutral-400 transition-colors duration-300 hover:text-white",
          // Dynamically apply the specific hover animation from your config
          ANIMATIONS.social[link.icon as keyof typeof ANIMATIONS.social],
        ]}
      >
        <Icon icon={link.icon} class="h-6 w-6" />
      </a>
    ))
  }
</div>