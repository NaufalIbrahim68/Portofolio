---
interface IconProps {
  icon: string;        // Nama icon, misal "github", "linkedin"
  class?: string;      // Class Tailwind atau CSS tambahan
}

const { icon, class: className } = Astro.props as IconProps;

const ICON_SVGS: Record<string, string> = {
  github: `<path d="M12 0c-6.627 0-12 5.373-12 12 0 5.302..."/>`,
  linkedin: `<path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0..."/>`,
  twitter: `<path d="M23 3a10.9 10.9 0 0 1-3.14.86..."/>`,
};

// fallback jika icon tidak ditemukan
const svgContent = ICON_SVGS[icon] ?? `<circle cx="12" cy="12" r="10" fill="gray" />`;
---

<svg
  class={className}
  xmlns="http://www.w3.org/2000/svg"
  fill="currentColor"
  viewBox="0 0 24 24"
  aria-hidden="true"
  role="img"
  stroke="none"
  set:html={svgContent}
/>
